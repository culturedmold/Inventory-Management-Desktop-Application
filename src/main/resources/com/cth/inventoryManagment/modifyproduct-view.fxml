<AnchorPane fx:id="modifyProductAnchorPane" prefHeight="552.0" prefWidth="792.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cth.inventoryManagment.ModifyProductController">

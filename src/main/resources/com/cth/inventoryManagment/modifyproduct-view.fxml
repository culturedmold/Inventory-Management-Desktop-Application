                           <children>
                                  <VBox alignment="CENTER_RIGHT">
                                      <children>
                                          <Button fx:id="removeAssociatedPartButton" mnemonicParsing="false" onAction="#removeAssociatedPart" text="Remove Associated Part" />
                                          <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="742.0">
                                              <children>
                                                  <Button defaultButton="true" mnemonicParsing="false" prefWidth="100.0" text="Save">
                                                      <HBox.margin>
                                                          <Insets bottom="10.0" top="10.0" />
                                                      </HBox.margin>
                                                  </Button>
                                                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelModifyProduct" prefWidth="100.0" text="Cancel">
                                                      <HBox.margin>
                                                          <Insets bottom="10.0" left="10.0" top="10.0" />
                                                      </HBox.margin>
                                                  </Button>
                                              </children>
                                          </HBox>
                                      </children>
                                      <opaqueInsets>
                                          <Insets />
                                      </opaqueInsets>
                                  </VBox>
                           </children>

                                        <Label prefWidth="65.0" text="ID">
                                            <HBox.margin>
                                                <Insets right="20.0" />
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="prodIdField" disable="true" prefWidth="160.0" promptText="ID - Autogenerated">

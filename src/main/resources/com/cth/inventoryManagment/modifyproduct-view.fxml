                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </TextField>
                                <TableView fx:id="allPartsTable" prefHeight="197.0" prefWidth="484.0">
                                    <columns>
                                        <TableColumn fx:id="colPartID1" prefWidth="75.0" text="Part ID" />
                                        <TableColumn fx:id="colPartName1" prefWidth="203.0" text="Part Name" />
                              <TableColumn fx:id="colInvLevel1" prefWidth="103.0" text="Inventory Level" />
                              <TableColumn fx:id="colPartCost1" prefWidth="102.0" text="Cost per Unit" />
                                    </columns>
                                </TableView>
                                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="100.0" text="Add">
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <TableView fx:id="associatedPartsTable" prefHeight="178.0" prefWidth="484.0">
                                    <columns>
                                        <TableColumn fx:id="colPartID2" prefWidth="75.0" text="Part ID" />

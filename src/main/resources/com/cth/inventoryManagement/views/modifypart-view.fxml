<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="modifyPartAnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cth.inventoryManagement.ModifyPartController">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <children>
                <Label text="Modify Part">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <HBox prefHeight="9.0" prefWidth="550.0">
                    <children>
                        <RadioButton fx:id="inHouseButton" mnemonicParsing="false" onAction="#setPartType" selected="true" text="In House">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="productTypeRadioButton" />
                     </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="outsourcedButton" mnemonicParsing="false" onAction="#setPartType" text="Outsourced" toggleGroup="$productTypeRadioButton">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </RadioButton>
                    </children>
                    <opaqueInsets>
                        <Insets top="25.0" />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="550.0">
                    <children>
                        <Label prefWidth="65.0" text="ID">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="modifyPartIdField" disable="true" promptText="ID - Autogenerated" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="550.0">
                    <children>
                        <Label prefWidth="65.0" text="Name">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="modifyPartNameField" promptText="Part Name" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="550.0">
                    <children>
                        <Label prefWidth="65.0" text="Inv">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="modifyPartInvField" promptText="Inv" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="550.0">
                    <children>
                        <Label prefWidth="65.0" text="Cost">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="modifyPartCostField" promptText="Cost" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="550.0">
                    <children>
                        <Label prefWidth="65.0" text="Max/Min">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="modifyPartMaxField" promptText="Max" />
                        <TextField fx:id="modifyPartMinField" promptText="Min">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="550.0">
                    <children>
                        <Label fx:id="companyOrMachineIDLabel" prefWidth="65.0" text="Machine ID">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="companyOrMachineIDTextField" promptText="Machine ID" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="modifyPartSaveButton" defaultButton="true" mnemonicParsing="false" onAction="#saveModifyPart" prefWidth="100.0" text="Save">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="modifyPartCancelButton" mnemonicParsing="false" onAction="#cancelModifyPart" prefWidth="100.0" text="Cancel">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
